@model dynamic;
@using System.Collections.Generic;
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@{
   IEnumerable<PruebaMVCLogin.Models.Proforma> listProformas = new List<Proforma>();
