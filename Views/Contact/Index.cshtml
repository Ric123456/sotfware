
@model IEnumerable<PruebaMVCLogin.Models.Contact>
@{
    ViewData["Title"] = "";
}

<style type="text/css">
    table {

        border-radius: 5px 10px 10px 20px;
        border-color: black;
        background: white;
        margin: 25px auto;
        border: 1px solid #ccc;
        box-shadow: 7px 7px 15px black;
    }
.btn{
    color: black;
    background: skyblue;
    border: 2px solid skyblue;
    border-radius: 6px;
    font-size: 20px;
    font-style: oblique;
    font-weight: bolder;
}
.btn:hover {
      background-color: transparent;
      color: black;
 }
a{
    font-style: oblique;
    color: black;
}
th{
    background: skyblue;
    font-size: 25px;
     font-style: oblique;
    font-weight: bolder;

    border: 1px solid #ccc;
    text-shadow: 5px 2px 2px white;
    text-align: center;
}
td{
    text-align: center;
    font-size: 15px;
    font-style: oblique;

}
</style>

<h1>@ViewData["Title"]</h1>
<br>
<p>
   <a class="btn " asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a class="btn " asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn " asp-action="Delete" asp-route-id="@item.Id">Del</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
              <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>

        </tr>
}
    </tbody>
</table>
