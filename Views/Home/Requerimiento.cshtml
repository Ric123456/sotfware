@model PruebaMVCLogin.Models.Informacion
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
  <i> <h1 class="display-4" >Datos Requeridos</h1></i> 

   <form asp-controller="Home" asp-action="Requerimiento">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control form-control-sm" type="text" placeholder="Escribe un nombre" aria-label=".form-control-sm" />

        <label asp-for="Apellido" class="control-label"></label>
        <input asp-for="Apellido" class="form-control" />

        <label asp-for="Telefono" class="control-label"></label>
        <input asp-for="Telefono" class="form-control" />

        
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Guardar</button> 
        </div>              
    </form>
</div>