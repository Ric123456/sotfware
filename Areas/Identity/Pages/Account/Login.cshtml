label
{
    font-size: 25px;
    font-style: oblique;
}
.btn{
    color: black;
    background: skyblue;
    border: 2px solid skyblue;
    border-radius: 6px;
    font-size: 30px;
     font-style: oblique;
          font-weight: bolder;
}
.btn:hover {
         background-color: transparent;
      color: black;
 }
a{
    font-style: oblique;
    color: black;
}

    
