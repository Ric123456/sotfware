<br><br><br><br>
<h1>@ViewData["Title"]</h1>
<div class="row">

    <div class="col-md-4">
        <img src="https://i.pinimg.com/736x/11/b0/d3/11b0d3640dc3bf339722cc5b2c5a808b.jpg" >
       
    </div>
    <div class="col-md-8 ">
        <section>
            <form id="account" method="post">
                <br>
                    <h2 > INVERSIONES JC</h2>
                    <h3>Utilice una cuenta local para iniciar sesión</h3>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group" style="font-style: oblique" >
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>


                <center>
                    <div class="form-group">
                        <button type="submit" class="btn ">LOG IN</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">¿Olvido su contraseña?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrar un nuevo
                                usuario</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar email de
                                confirmación</a>
                        </p>
                    </div>
            </form>
        </section>
    </div>
    </center>

   
